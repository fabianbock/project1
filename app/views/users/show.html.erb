<h1>My User Profile</h1>
<p>
  <% if @user %>
    <%= @user.name %><br />
    <%= @user.email %><br />
  <% end %>
</p>

<div>
  <%= render partial: 'tasks/form', locals: { user: @user, task: @task} %>
</div>

<h2>My Tasks</h2>
<div>
  <% @user.tasks.each do |task| %>
    <%= render partial: 'tasks/task', locals: { task: task} %>
  <% end %>
</div>
